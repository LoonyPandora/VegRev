  <script>
    $(document).ready(function () {
        $('input').placeholder();

        $('.quote .quote_body').click(function(){
          var start_height = $(this).height();
          $(this).css( "height", "auto" );
          var end_height = $(this).height();

          if (end_height > start_height) {
            $(this).height( start_height ).animate({ height: end_height });
            console.log('resizing');
            console.log(end_height);
            console.log(' > ');
            console.log(start_height);
          }

        });
    });
  </script>

