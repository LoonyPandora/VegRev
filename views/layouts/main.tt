<!doctype html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>
    <meta charset="<: $settings.charset :>">
    <meta http-equiv="Content-type" content="text/html; charset=<: $settings.charset :>">
    <title>VegRev</title>

    <link rel="stylesheet" href="<: $settings.static_url :>/css/bootstrap.1.4.0.min.css">
    <link rel="stylesheet" href="<: $settings.static_url :>/css/global.css">
    <link rel="stylesheet" href="<: $settings.static_url :>/css/postform.css">
    <link rel="stylesheet" href="<: $settings.static_url :>/css/proxima_nova.css">

    <link rel="stylesheet" href="<: $settings.static_url :>/css/<:$template:>.css">
    <link rel="stylesheet" href="<: $settings.static_url :>/css/theme/<:$theme:>.css">
    
    <link rel="stylesheet" href="<: $settings.static_url :>/css/chosen.css">

    <link rel="stylesheet" href="<: $settings.static_url :>/js/tinymce/themes/advanced/skins/vegrev/ui.css">

</head>
<body>


<div class="topbar">
    <: include "header.tt" :>
</div>

<div class="container clearfix">
    <div id="content">
        <: $content | raw :>
    </div>

    <div id="sidebar" class="clearfix">
        <: include "sidebar.tt" :>
    </div>
</div>


<div id="footer" class="clearfix">
    <: include "footer.tt" :>
</div>


<div id="postform" class="clearfix modal hide fade">
    <: include "textarea.tt" :>
</div>



<!-- JS at the bottom so it doesn't block -->
<script src="<: $settings.static_url :>/js/jquery.1.7.1.min.js"></script>
<script src="<: $settings.static_url :>/js/jquery.masonry.2011.10.15.min.js"></script>
<script src="<: $settings.static_url :>/js/hashgrid.js"></script>

<script src="<: $settings.static_url :>/js/bootstrap-modal.js"></script>
<script src="<: $settings.static_url :>/js/bootstrap-buttons.js"></script>
<script src="<: $settings.static_url :>/js/bootstrap-alerts.js"></script>
<script src="<: $settings.static_url :>/js/bootstrap-twipsy.js"></script>
<script src="<: $settings.static_url :>/js/bootstrap-popover.js"></script>
<script src="<: $settings.static_url :>/js/bootstrap-tabs.js"></script>

<script src="<: $settings.static_url :>/js/tinymce/config.js"></script>
<script src="<: $settings.static_url :>/js/tinymce/jquery.tinymce.js"></script>
<script src="<: $settings.static_url :>/js/tinymce/tiny_mce.js"></script>

<script src="<: $settings.static_url :>/js/jquery.chosen.min.js"></script>

<script src="<: $settings.static_url :>/js/app.js"></script>
<script src="<: $settings.static_url :>/js/postform.js"></script>
<script src="<: $settings.static_url :>/js/<:$template:>.js"></script>

</body>
</html>
