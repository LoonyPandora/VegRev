                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/cool.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/smiley.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/sad.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/grin.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/cool.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/cry.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/shocked.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/tongue.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/grin.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/smiley.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/sad.gif"></a></li>
                <li><a href="#"><img src="<: $settings.static_url :>/img/emoticons/thumbsup.gif"></a></li>
            </ul>
        </li>
    </ul>
    
    <div id="tinymce_container" class="clearfix">
        <input type="text" placeholder="Subject" id="subject">

        <textarea id="message"></textarea>

        <ul class="mce_attachments"></ul>
    </div>
</div>

    <select title="Tag this post" multiple id="tag_select">
        <option value="chat">Chat</option>
        <option value="rants">Rants</option>
        <option value="private">Private</option>
        <option value="spam">Spam</option>
        <option value="music">Music</option>
        <option value="literature">Literature</option>
        <option value="zine">Zine</option>
        <option value="meta">Meta</option>
        <option value="admin">Admin</option>
        <option value="archive">Archive</option>
    </select>


<div class="modal-footer">
    <input type="submit" class="btn success" value="Post Message">
</div>

